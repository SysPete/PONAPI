#!/usr/bin/env perl

use strict;
use warnings;
use FindBin;
use lib "$FindBin::Bin/../t/lib";

use Test::Schema;

my $schema = Test::Schema->connect(
    'dbi:SQLite:testdb.sqlite',
    undef, undef,
    {
        sqlite_unicode  => 1,
        on_connect_call => "use_foreign_keys",
        on_connect_do   => 'PRAGMA synchronous = OFF',
        quote_names     => 1,
    }
);

$schema->deploy;
